    /*获取Option的所有数据*/
    const getAllOptionData = function () {
        let data = []
        $('#attribute-options').find('.option-item').each(function (index, el) {
            let $this = $(el), code = $this.find('td[data-field="code"]').text()
            if (code !== '') {
