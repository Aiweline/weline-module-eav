    async function addRow(e) {
        // 阻止默认事件提交form表单
        let attribute_options_table = $('#attribute-options')
        // 校验数据
        let type_id = $('#validationType').val();
        let json_str = decodeURIComponent($('option[data-code'+type_id+'-json]').attr('data-code'+type_id+'-json'))
